@{
    ViewBag.Title = "Home Page";
}

<form class="form-horizontal">
    <div class="form-group">
        <label for="txtKajal" class="col-sm-2 control-label">Kajal</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtKajal" oninput="updateDeploymentStatus('kajal', this.value)" placeholder="Kajal Deployment Status">
        </div>
    </div>
    <div class="form-group">
        <label for="txtKadharbhi" class="col-sm-2 control-label">Kadharbhi</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtKadharbhi" oninput="updateDeploymentStatus('kadharbhi', this.value)" placeholder="Kadharbhi Deployment Status">
        </div>
    </div>
    <div class="form-group">
        <label for="txtKadharbhiShaik" class="col-sm-2 control-label">Kadharbhi Shaik</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="txtKadharbhiShaik" oninput="updateDeploymentStatus('kadharbhishaik', this.value)" placeholder="Kadharbhi Shaik Deployment Status">
        </div>
    </div>
</form>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/custom.js"></script>
}